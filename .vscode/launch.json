{
    "version": "0.2.0",
    "configurations": [

        {
            "type": "java",
            "name": "Launch MgrwebApp",
            "request": "launch",
            "mainClass": "com.mapr.mgrweb.MgrwebApp",
            "projectName": "mgrweb"
        },
        {
            "name": "Launch ng serve & Chrome",
            "type": "chrome",
            "request": "launch",
            "preLaunchTask": "npm: start",
            "url": "http://localhost:9000",
            
            "webRoot": "${workspaceFolder}",

            "sourceMaps": true,
            "sourceMapPathOverrides": {
              "webpack:/*": "${webRoot}/*",
              "/./*": "${webRoot}/*",
              "/src/*": "${webRoot}/*",
              "/*": "*",
              "/./~/*": "${webRoot}/node_modules/*"
            }
          }
    ]
}